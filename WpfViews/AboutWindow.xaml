<Window x:Class="JaMoApp.WpfViews.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About JaMoApp"
        Height="320"
        Width="420"
        WindowStartupLocation="CenterScreen"
        Background="#FF2D2D30"
        Foreground="White">
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <!-- Title / App Name -->
    <TextBlock Text="JaMoApp"
               FontSize="20"
               FontWeight="Bold"
               HorizontalAlignment="Center" />

    <!-- Main Info Panel -->
    <StackPanel Grid.Row="1"
                Margin="0,10,0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">

      <!-- Version -->
      <TextBlock x:Name="txtVersion"
                 Text="Version: 1.2.0"
                 Margin="0,5,0,0"
                 FontSize="14"
                 HorizontalAlignment="Center" />

      <!-- Copyright -->
      <TextBlock x:Name="txtCopyright"
                 Text="© 2025 JaMoApp"
                 Margin="0,5,0,0"
                 HorizontalAlignment="Center" />

      <!-- GitHub Button -->
      <Button x:Name="btnGitHub"
              Content="View GitHub"
              Width="120"
              Margin="0,10,0,0"
              Click="BtnGitHub_Click"
              HorizontalAlignment="Center" />

      <!-- LinkedIn Button -->
      <Button x:Name="btnLinkedIn"
              Content="LinkedIn Profile"
              Width="120"
              Margin="0,10,0,0"
              Click="BtnLinkedIn_Click"
              HorizontalAlignment="Center" />

      <!-- License Button -->
      <Button x:Name="btnLicense"
              Content="License"
              Width="120"
              Margin="0,10,0,0"
              Click="BtnLicense_Click"
              HorizontalAlignment="Center" />

      <!-- License Info -->
      <TextBlock Text="All rights reserved. This software is provided under the MIT License."
                 TextWrapping="Wrap"
                 Margin="0,10,0,0"
                 Width="350"
                 HorizontalAlignment="Center" />
    </StackPanel>

    <!-- Close Button -->
    <Button x:Name="btnClose"
            Grid.Row="2"
            Content="Close"
            Width="80"
            Margin="0,0,10,0"
            HorizontalAlignment="Right"
            Click="BtnClose_Click" />
  </Grid>
</Window>
